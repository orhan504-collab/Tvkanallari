<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#0A0A0A">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChannelList"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#121212"
        android:padding="8dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="24dp">

        <FrameLayout
            android:id="@+id/videoWrapper"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:padding="2dp">

            <VideoView
                android:id="@+id/previewVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/videoLoader"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#FF0000" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvSelectedChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Kanal SeÃ§iniz"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
